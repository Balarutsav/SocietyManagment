<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="com.utsav.societymanagment.ui.splash.SplashViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_app_logo"
        android:id="@+id/ivLogo"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toTopOf="@id/ivBuidings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>
<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/ivBuidings"
    android:layout_width="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:src="@drawable/ic_bg_buildings"
    android:layout_height="wrap_content"/>
<com.utsav.societymanagment.utils.customViews.CustomBoldTextView
    android:layout_width="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/ivLogo"
    app:layout_constraintEnd_toEndOf="parent"
    android:textSize="25sp"
    android:textColor="@color/black"
    android:text="@string/app_name"
    android:layout_marginTop="20dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>